{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowUnreachableCode": false,
		"strict": true,
		"sourceMap": true,
		"declaration": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"noImplicitReturns": true,
		"types": [
			"reflect-metadata",
			"mocha",
			"chai",
			"uuid"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"scripts",
		"coverage",
		"dist",
		"test"
	]
}
